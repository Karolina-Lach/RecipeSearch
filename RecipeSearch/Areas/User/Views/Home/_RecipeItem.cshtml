@model RecipeSearch.Models.ViewModels.RecipeHeaderVM

<div class="col-lg-3 col-md-6">
    <div class="row p-2">
        <div class="col-12  p-1" style="border:1px solid #008cba; border-radius: 5px;">
            <div class="card" style="border:0px;">

                <div class="thumbnail text-center">
                    <img class="rounded mx-auto d-block" src="@Model.ImageUrl" />
                </div>
                <div class="pl-1">
                    <p class="card-title h5 text-center pt-1 pb-0">@Model.Name</p>
                    <p class="text-sm-center pt-0">Source: @Model.Source</p>
                </div>
                <div style="padding-left:5px;" class="text-center">
                    <p>
                        Time: <b class="">@Model.PrepTimeDisplay</b>
                        &nbsp; Servings: <b class="">@Model.Servings</b>
                    </p>
                </div>


                <div class="row">
                    <div class="col" style="padding-right:2px">
                        <a asp-area="User" asp-controller="Recipe" asp-action="Details" class="btn btn-primary form-control" asp-route-id="@Model.RecipeId">More...</a>
                    </div>
                    <div class="col col-md-auto" style="padding-left:2px">
                        <partial name="_LikeButton" model="@new RecipeSearch.Models.ViewModels.LikeButtonVM(Model.RecipeId, Model.IsLiked)" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

