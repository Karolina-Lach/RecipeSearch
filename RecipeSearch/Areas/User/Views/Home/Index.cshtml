@model RecipeSearch.Utility.PaginatedList<RecipeSearch.Models.ViewModels.RecipeHeaderVM>

@{
    ViewData["Title"] = "Home Page";
}
<div id="homeContainer"class="container col-lg-12 justify-content-center align-content-center">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/background-plain.png" alt="First slide">
                <div class="carousel-caption">
                    <h1 class="display-2">Recipe Search</h1>
                    <h3>Find the perfect recipe for your needs.</h3>
                    <br/>
                    <img src="~/images/icon.png" style="width:30%; height:auto"/>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/background-plain.png" alt="Second slide">
                <div class="carousel-caption">
                    <h1 class="display-2">@Model.ToArray()[0].Name</h1>
                    <h3>Prep time: @Model.ToArray()[0].PrepTimeDisplay &nbsp; Servings: @Model.ToArray()[0].Servings</h3>
                    <h2><button class="btn btn-light" asp-controller="Recipe" asp-action="Details" asp-route-id="@Model.ToArray()[0].RecipeId">More...</button></h2>
                    <br />
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/background-plain.png" alt="Second slide">
                <div class="carousel-caption">
                    <h1 class="display-2">@Model.ToArray()[1].Name</h1>
                    <h3>Prep time: @Model.ToArray()[1].PrepTimeDisplay &nbsp; Servings: @Model.ToArray()[1].Servings</h3>
                    <h2><button class="btn btn-light" asp-controller="Recipe" asp-action="Details" asp-route-id="@Model.ToArray()[1].RecipeId">More...</button></h2>
                    <br />
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

</div>


@section Scripts {
    <script src="~/js/likeButton.js"></script>
}


